<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:text="@string/text_set_up_repetition"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/margin_16"
            android:checked="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center">

        <TextView
            android:id="@+id/tvDaily"
            android:layout_width="@dimen/width_88"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_date_unselected"
            android:gravity="center"
            android:text="@string/text_daily"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tvWeekly"
            android:layout_width="@dimen/width_88"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:background="@drawable/bg_btn_date_unselected"
            android:gravity="center"
            android:text="@string/text_weekly"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tvMonthly"
            android:layout_width="@dimen/width_88"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:background="@drawable/bg_btn_date_unselected"
            android:gravity="center"
            android:text="@string/text_monthly"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutRepeatEvery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvRepeatEvery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_repeat_every" />

        <Spinner
            android:id="@+id/spinnerRepeatEvery"
            android:layout_width="@dimen/width_200"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:dropDownWidth="@dimen/width_120"
            android:textAlignment="viewEnd" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutRepeatInWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvRepeatInWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_repeat_in" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRepeatInWeek"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMonday"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_36"
                    android:background="@drawable/bg_btn_date_unselected"
                    android:gravity="center"
                    android:minWidth="@dimen/width_36"
                    android:minHeight="@dimen/height_36"
                    android:text="@string/text_mon" />

                <TextView
                    android:id="@+id/tvTuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_36"
                    android:layout_marginStart="@dimen/margin_16"
                    android:background="@drawable/bg_btn_date_unselected"
                    android:gravity="center"
                    android:minWidth="@dimen/width_36"
                    android:minHeight="@dimen/height_36"
                    android:text="@string/text_tue" />

                <TextView
                    android:id="@+id/tvWednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_36"
                    android:layout_marginStart="@dimen/margin_16"
                    android:background="@drawable/bg_btn_date_unselected"
                    android:gravity="center"
                    android:minWidth="@dimen/width_36"
                    android:minHeight="@dimen/height_36"
                    android:text="@string/text_wed" />

                <TextView
                    android:id="@+id/tvThursday"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_36"
                    android:layout_marginStart="@dimen/margin_16"
                    android:background="@drawable/bg_btn_date_unselected"
                    android:gravity="center"
                    android:minWidth="@dimen/width_36"
                    android:minHeight="@dimen/height_36"
                    android:text="@string/text_thu" />

                <TextView
                    android:id="@+id/tvFriday"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_36"
                    android:layout_marginStart="@dimen/margin_16"
                    android:background="@drawable/bg_btn_date_unselected"
                    android:gravity="center"
                    android:minWidth="@dimen/width_36"
                    android:minHeight="@dimen/height_36"
                    android:text="@string/text_fri" />

                <TextView
                    android:id="@+id/tvSaturday"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_36"
                    android:layout_marginStart="@dimen/margin_16"
                    android:background="@drawable/bg_btn_date_unselected"
                    android:gravity="center"
                    android:minWidth="@dimen/width_36"
                    android:minHeight="@dimen/height_36"
                    android:text="@string/text_sat" />

                <TextView
                    android:id="@+id/tvSunday"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_36"
                    android:layout_marginStart="@dimen/margin_16"
                    android:background="@drawable/bg_btn_date_unselected"
                    android:gravity="center"
                    android:minWidth="@dimen/width_36"
                    android:minHeight="@dimen/height_36"
                    android:text="@string/text_sun" />

            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutRepeatInMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvRepeatInMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_repeat_in" />

        <Spinner
            android:id="@+id/spinnerRepeatIn"
            android:layout_width="@dimen/width_200"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:dropDownWidth="@dimen/width_120"
            android:textAlignment="viewEnd" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutRepeatEndIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvRepeatEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_repeat_end_in" />

        <Spinner
            android:id="@+id/spinnerRepeatEnd"
            android:layout_width="@dimen/width_200"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:dropDownWidth="@dimen/width_120"
            android:textAlignment="viewEnd" />

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:background="#DDDDDD" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_40"
            android:text="@string/text_confirm"
            android:textColor="@color/blue500"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_toStartOf="@id/btnConfirm"
            android:text="@string/text_cancel"
            android:textColor="@color/blueLight"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>