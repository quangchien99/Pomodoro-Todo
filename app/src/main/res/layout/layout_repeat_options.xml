<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:text="@string/text_set_up_repetition"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center">

        <TextView
            android:id="@+id/tvDaily"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_date_unselected"
            android:gravity="center"
            android:text="@string/text_daily"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvWeekly"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:background="@drawable/bg_btn_date_unselected"
            android:gravity="center"
            android:text="@string/text_weekly"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMonthly"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:background="@drawable/bg_btn_date_unselected"
            android:gravity="center"
            android:text="@string/text_monthly"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16">

        <TextView
            android:id="@+id/tvRepeatEvery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_repeat_every" />

        <Spinner
            android:id="@+id/spinnerRepeatEvery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutRepeatInWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16">

        <TextView
            android:id="@+id/tvRepeatInWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat In" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRepeatInWeek"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMonday"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/blueLight"
                android:text="Mon" />

            <TextView
                android:id="@+id/tvTuesday"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/margin_16"
                android:background="@color/blueLight"
                android:text="Tue" />

            <TextView
                android:id="@+id/tvWednesday"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/margin_16"
                android:background="@color/blueLight"
                android:text="Wed" />

            <TextView
                android:id="@+id/tvThursday"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/margin_16"
                android:background="@color/blueLight"
                android:text="Thu" />

            <TextView
                android:id="@+id/tvFriday"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/margin_16"
                android:background="@color/blueLight"
                android:text="Fri" />

            <TextView
                android:id="@+id/tvSaturday"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/margin_16"
                android:background="@color/blueLight"
                android:text="Sat" />

            <TextView
                android:id="@+id/tvSunday"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/margin_16"
                android:background="@color/blueLight"
                android:text="Sun" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutRepeatInMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16">

        <TextView
            android:id="@+id/tvRepeatInMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat In" />

        <Spinner
            android:id="@+id/spinnerRepeatIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16">

        <TextView
            android:id="@+id/tvRepeatEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat end in" />

        <Spinner
            android:id="@+id/spinnerRepeatEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:background="#DDDDDD" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_40"
            android:text="@string/text_confirm"
            android:textColor="@color/blue500"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_toStartOf="@id/btnConfirm"
            android:text="@string/text_cancel"
            android:textColor="@color/blueLight"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>